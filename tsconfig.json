{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "types": ["vitest/globals", "vite/client"],
    "paths": {
      "$lib/*": ["src/lib/*"],
      "$components/*": ["src/lib/components/*"],
      "$content/*": ["src/lib/content/*"],
      "$styles/*": ["src/styles/*"]
    }
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.svelte",
    "src/**/*.svx",
    "src/**/*.md",
    "tests/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
